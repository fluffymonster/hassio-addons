{
  "name": "WeeWX Gateway 1",
  "version": "1.01",
  "slug": "weewx_g1",
  "init": "false",
  "description": "Weather capture server. Gateway 1",
  "url": "https://github.com/fluffymonster/hassio-addons",
  "arch": ["armhf", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "services": ["mqtt:need"],
  "map": [
    "backup:rw",
    "config",
    "share"
  ],
  "options": {
    "Station": {
		"location": "Simulator",
		"latitude": "-37.850000",
		"longitude": "144.970000",
		"altitude": "150, meter",
		"start_of_week": 0
	},
	"RSYNC": {
       "enable": false,
	   "server": "",
	   "user": "",
	   "password": "",
	   "path": ""
	},
	"Logging": {
		"log_success": false,
		"log_failure": false
	},
    "MQTT": {
	  "server_url": "mqtt://user:password@url:port/",
      "topic": "weewx_g1",
      "unit_system": "METRIC",
      "aggregation": "individual"		
	},
	"Skins": {
	  "date_format": "%d-%b-%Y %H:%M"
	},
	"Maintenance": false
  },
  "schema": {
    "Station": {
		"location": "str",
		"latitude": "str",
		"longitude": "str",
		"altitude": "str",
		"start_of_week": "int(0,6)"
	},
	"Logging": {
		"log_success": "bool",
		"log_failure": "bool"
	},
    "MQTT": {
	    "server_url": "str",
        "topic": "str",
        "unit_system": "str",
        "aggregation": "str"		
	  },
	"RSYNC": {
		"enable": "bool",
		"server": "str",
		"user": "str",
		"password": "password",
		"path": "str"
	  },
	"Skins": {
	    "date_format": "str"
	},
	"Maintenance": "bool"
  },
  "ports": {
    "8000/tcp": 8000
  },
  "ports_description":{
	"8000/tcp": "Interceptor Listen socket"
  }
}